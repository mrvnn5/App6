<?xml version="1.0" encoding="utf-8" ?> 
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">


        <ImageButton
            android:src="@drawable/outline_arrow_back_ios_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:id="@+id/imageButton1"
            android:tint="@color/bottomToolBar"/>


        <TextView
              android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
              android:gravity="center"
              android:textSize="30dp"
              android:textColor="@color/colorPrimaryDark"
              android:text="Добро Пожаловать!"
              android:layout_centerHorizontal="true" 
        android:layout_above="@+id/data"/>

        <RelativeLayout
            android:id="@+id/data"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           

                    <TextView
                        android:id="@+id/username"     
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:paddingRight="50dp"
                        android:paddingBottom="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Никнейм"/>

            
                    <EditText
                        android:id="@+id/editUsername"
                        android:inputType="textPersonName"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/username"
                        android:maxLength="20"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>
                

            
                    <TextView
            
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/username"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Рост"/>

                    <EditText
            
                        android:id="@+id/editHeight"
                        android:inputType="number"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/username"
                        android:layout_toRightOf="@+id/username"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>

                    <TextView
            
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/height"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Вес"/>

                    <EditText
            
                        android:id="@+id/editWeight"
                        android:inputType="numberDecimal"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/height"
                        android:layout_toRightOf="@+id/username"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>
                    
                    <TextView
            
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weight"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Пол"/>

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weight"
                        android:layout_toRightOf="@+id/username"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/spinnerstyle"
                        android:entries="@array/gender_spinner_array"/>


                    <TextView
            
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gender"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Возраст"/>

                    <EditText
            
                        android:id="@+id/editAge"
                        android:inputType=""
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/gender"
                        android:layout_toRightOf="@+id/username"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>

                    <TextView
            
                        android:id="@+id/activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/age"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Активность"/>
                    <Spinner
                        android:id="@+id/spinnerActivity"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/age"
                        android:layout_toRightOf="@+id/username"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:background="@drawable/spinnerstyle"
                        android:entries="@array/activity_spinner_array"/>
                    
                    <TextView
            
                        android:id="@+id/plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="План"/>
                    <Spinner
                        android:id="@+id/spinnerPlan"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity"
                        android:layout_toRightOf="@+id/username"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:background="@drawable/spinnerstyle"
                        android:entries="@array/plan_spinner_array"/>
                   
    </RelativeLayout>

    <ImageButton
        android:src="@drawable/outline_check_circle_black_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data"
        android:id="@+id/imageButton1"
        android:tint="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true" />



</RelativeLayout>