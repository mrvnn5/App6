<?xml version="1.0" encoding="utf-8" ?> 
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


   


        <TextView
              android:id="@+id/mainText"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:textSize="30dp"
              android:textColor="@color/colorPrimaryDark"
              android:text="Мои Данные"
              android:layout_centerHorizontal="true" 
              android:layout_above="@+id/data"/>

        <RelativeLayout
            android:id="@+id/data"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           
                    <TextView
                        android:id="@+id/username"     
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:paddingRight="70dp"
                        android:paddingBottom="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Никнейм"/>

            
                    <EditText
                        android:id="@+id/editUsername"
                        android:inputType="textPersonName"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/username"
                        android:maxLength="20"
                        android:padding="7dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>
                

            
                    <TextView
            
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/username"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Рост"/>

                    <EditText
            
                        android:id="@+id/editHeight"
                        android:inputType="number"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/username"
                        android:layout_toRightOf="@+id/username"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>

                    <TextView
            
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/height"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Вес"/>

                    <EditText
            
                        android:id="@+id/editWeight"
                        android:inputType="number"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/height"
                        android:layout_toRightOf="@+id/username"
                        android:textSize="20dp"
                        android:padding="7dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>
                    
                    <TextView
            
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weight"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Пол"/>

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weight"
                        android:layout_toRightOf="@+id/username"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="9dp"
                        android:textAlignment="center"
                        android:background="@drawable/spinnerstyle"
                        android:entries="@array/gender_spinner_array"/>


                    <TextView
            
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gender"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Дата рождения"/>

                    <EditText
            
                        android:id="@+id/editAge"
                        android:inputType="date"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" 
                        android:layout_below="@+id/gender"
                        android:layout_toRightOf="@+id/username"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/roundedborder_edittext"/>

                    <TextView
            
                        android:id="@+id/activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/age"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Активность"/>
                    <Spinner
                        android:id="@+id/spinnerActivity"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/age"
                        android:layout_toRightOf="@+id/username"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:padding="9dp"
                        android:background="@drawable/spinnerstyle"
                        android:entries="@array/activity_spinner_array"/>
                    
                    <TextView
            
                        android:id="@+id/plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="План"/>
                    <Spinner
                        android:id="@+id/spinnerPlan"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity"
                        android:layout_toRightOf="@+id/username"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:padding="9dp"
                        android:background="@drawable/spinnerstyle"
                        android:entries="@array/plan_spinner_array"/>
                                  
                    <TextView
            
                        android:id="@+id/rci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/plan"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        android:paddingRight="30dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="РСК"/>

        
                    <TextView
            
                        android:id="@+id/rciEdit"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/plan"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/username"
                        android:background="@drawable/roundedborder_edittext"/>
    </RelativeLayout>

     <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/changeData" 
        android:layout_below="@+id/data"
        android:text="Изменить данные"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/mtrl_btn_transparent_bg_color"/>

            <RelativeLayout
            android:id="@+id/buttons"
            android:layout_below="@+id/changeData"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/round_home_black_48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/changeData"
                    android:id="@+id/homeButton"
                    android:tint="@color/colorPrimary"
                    android:paddingVertical="30dp"
                    android:background="@android:color/transparent"
                    />
                <ImageButton
                    android:src="@drawable/round_logout_black_48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/changeData"
                    android:layout_toRightOf="@+id/homeButton"
                    android:id="@+id/logOutButton"
                    android:tint="@color/colorPrimary"
                    android:paddingVertical="30dp"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true" 
                    />

            </RelativeLayout>

</RelativeLayout>
